# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/hirextra?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here

# Redis (for queue processing)
REDIS_HOST=your-redis-host.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://default:password@your-redis-host.upstash.io:6379/0

# Frontend URL (for CORS)
FRONTEND_URL=https://your-app.vercel.app

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# RChilli Resume Parser
RCHILLI_USER_KEY=your-rchilli-user-key
RCHILLI_ENDPOINT=https://rest.rchilli.com/RChilliParser/Rchilli/parseResumeBinary
RCHILLI_VERSION=8.0.0
RCHILLI_SUB_USER_ID=your-rchilli-sub-user-id
RCHILLI_EXTRA_FIELDS={}

# Queue/Parser tuning
QUEUE_WORKER_CONCURRENCY=20
RESUME_PARSE_CONCURRENCY=4
RESUME_IMPORT_ENQUEUE_BATCH=1000

# Environment
NODE_ENV=production
LOG_LEVEL=info
