# Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=5000

# Database Configuration
MONGO_URI=mongodb://username:password@host:port/database

# Redis Configuration (for queue processing)
REDIS_HOST=localhost
REDIS_PORT=6379
# Preferred for cloud Redis (Render/Upstash)
REDIS_URL=redis://username:password@host:6379/0

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Frontend Configuration
FRONTEND_URL=https://yourdomain.com

# Logging Configuration
LOG_LEVEL=info

# AWS S3 Configuration (for production file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key-here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# RChilli Resume Parser Configuration
RCHILLI_USER_KEY=your-rchilli-user-key
# Optional; defaults to value in code
RCHILLI_ENDPOINT=https://rest.rchilli.com/RChilliParser/Rchilli/parseResumeBinary
RCHILLI_VERSION=8.0.0
# Optional (use if your RChilli account requires subuserid)
RCHILLI_SUB_USER_ID=
# Optional: auto|json|multipart (auto tries multipart first, then json)
RCHILLI_REQUEST_MODE=multipart
RCHILLI_MAX_ATTEMPTS=1
RCHILLI_REQUEST_TIMEOUT_MS=120000
# Optional JSON object string for account-specific fields
# Example: {"authToken":"...","parseTo":"json"}
RCHILLI_EXTRA_FIELDS={}

# Queue and parser tuning
QUEUE_WORKER_CONCURRENCY=20
RESUME_PARSE_CONCURRENCY=1
RESUME_IMPORT_DIRECT_CONCURRENCY=1
RESUME_IMPORT_ALLOW_REPARSE=false
RESUME_IMPORT_JOB_ATTEMPTS=1
RESUME_IMPORT_ENQUEUE_BATCH=1000

# OpenAI is only needed for /api/candidates/analyze-search
# OPENAI_API_KEY=optional-if-you-use-ai-search

# Optional: Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
